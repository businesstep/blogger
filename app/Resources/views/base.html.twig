<!DOCTYPE html>
<html>
    <head>
        <meta charset="Windows-1251" />
        <title>{% block title %}blog{% endblock %} - blogger</title>
        <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        {% block stylesheets %}
            <link href='http://fonts.googleapis.com/css?family=Irish+Grover' rel='stylesheet' type='text/css'>
            <link href='http://fonts.googleapis.com/css?family=La+Belle+Aurore' rel='stylesheet' type='text/css'>
            <link href="{{ asset('css/screen.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}

            <section id="wrapper">
                <header id="header">
                    <div class="top">
                        {% block navigation %}
                            <nav>
                                <ul class="navigation">
                                    <li><a href="{{ path('blogger_blogger_homepage') }}">Главная</a></li>
                                    <li><a href="{{ path('blogger_blogger_about') }}">Обо мне</a></li>
                                    <li><a href="{{ path('blogger_blogger_contacts') }}">Контакты</a></li>
                                </ul>
                            </nav>
                        {% endblock %}
                    </div>

                    <hgroup>
                        <h2>{% block blog_title %}<a href="{{ path('blogger_blogger_homepage') }}">symblog</a>{% endblock %}</h2>
                        <h3>{% block blog_tagline %}<a href="{{ path('blogger_blogger_homepage') }}">creating a blog in Symfony2</a>{% endblock %}</h3>
                    </hgroup>
                </header>

                <section class="main-col">
                    {% block bodycontent %}{% endblock %}
                </section>
                <aside class="sidebar">
                    {% block sidebar %}{% endblock %}
                </aside>

                <div id="footer">
                    {% block footer %}
                        Blog - created by <a href="https://businesstep.ru">Businesstep.ru</a> {#{ blog.created|date("d-m-Y") }#}
                    {% endblock %}
                </div>
            </section>

        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
