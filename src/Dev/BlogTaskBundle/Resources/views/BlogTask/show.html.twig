{% extends '::base.html.twig' %}

{% block body -%}
    <h1>BlogTask</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Task</th>
                <td>{{ entity.task }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Annotation</th>
                <td>{{ entity.annotation }}</td>
            </tr>
            <tr>
                <th>Textbody</th>
                <td>{{ entity.textbody }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('blogtask') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('blogtask_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
